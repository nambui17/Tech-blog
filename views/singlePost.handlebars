<div class='container mt-5'>
  <div class='card mb-4'>
    <div
      class='card-header d-flex justify-content-between align-items-center post'
      id="post"
      data-postid='{{post.id}}'
      data-commentid=""
    >
      <h3 class='col-7'>
        {{post.title}}
      </h3>
      <p class='col-5 text-right'>
        Posted By
        {{post.user.username}}
        on
        {{format_date post.time}}
      </p>
    </div>
    <article class='card-body'>
      <p class='card-text'>
        {{post.body}}
      </p>
    </article>
  </div>
</div>
{{#each post.comments as |comment|}}
  <div class='container mt-5'>
    <div class='card mb-4'>
      <div
        class='card-body d-flex justify-content-between align-items-center comment'
        data-commentid='{{comment.id}}'
        data-commentuser="{{comment.user.id}}"
        data-commentbody="{{comment.body}}"
      >
        <p class='col-4 text-left'>
          {{comment.body}}
        </p>
        <p class='col-8 text-right'>
          Posted By
          {{comment.user.username}}
          on
          {{format_date comment.time}}
        </p>
      </div>
    </div>
  </div>
{{/each}}

<div
  class='modal fade'
  id='commentModal'
  tabindex='-1'
  role='dialog'
  aria-labelledby='commentModalLabel'
  aria-hidden='true'
  data-loggeduser="{{user_idnum}}"
>
  <div class='modal-dialog' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='commentModalLabel'>Edit your comment!</h5>
        <button
          type='button'
          class='close'
          data-dismiss='modal'
          aria-label='Close'
        >
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>
      <div class='modal-body'>
        <form>
          <div class="form-group">
            <label for="commentBody">Body</label>
              <textarea class="form-control form-control-sm" id="commentBody" rows="5"></textarea>
          </div>
          <div class='modal-footer'>
            <button
              type='button'
              class='btn btn-secondary'
              data-dismiss='modal'
              >Close</button>
            <button type='submit' class='btn btn-primary' id="commentEdit">Edit</button>
            <button type='submit' class='btn btn-danger' id="commentDelete">Delete</button>
          </div>  
        </form>
      </div>
    </div>
  </div>
</div>

<script src='/js/clickComment.js'></script>