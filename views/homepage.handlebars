<h2>Posts</h2>

<div class="container">
  {{#each posts as |post|}}
    <div class="row">
      <div class="card w-100">
        <div class="card-header row align-items-center">
          <h3 class="col-9">{{ post.title }}</h3>
          <p class="col-3"> Posted By {{post.user.username}} on {{format_date post.time }}</p>
        </div>
        <div class="card-body">
          <p class="card-text">
            {{post.body}}
          </p>
        </div>
      </div>
    </div>
  {{/each}}
</div>